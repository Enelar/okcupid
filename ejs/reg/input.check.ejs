<div class='field'>
  <label><%@ __this.name %></label>

<%
this.chain(function()
{
  var that = this;

  that.first().on('check', function()
  {
    var val = $(this).val();
    phoxy.ApiRequest(['reg/check', __this.name, val], function(r)
    {
      var method = r.data.check ? "removeClass" : "addClass";
      __this.first()[method]("error");
    })
  })
})
%>
</div>